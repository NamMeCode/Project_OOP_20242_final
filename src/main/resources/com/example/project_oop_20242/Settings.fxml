<StackPane prefHeight="1024.0" prefWidth="1536.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_oop_20242.SettingsController">
   <children>
      <ImageView fitHeight="1024.0" fitWidth="1536.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@cards/MenuBackGround.png" />
         </image>
      </ImageView>
        <VBox alignment="CENTER" prefHeight="310.0" prefWidth="355.0" spacing="100.0">
         <Label fx:id="ChooseDisplayModeLabel" text="Choose Display Mode" textFill="#86910e">
            <font>
               <Font name="Engravers MT" size="50.0" />
            </font>
