<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
           fx:controller="com.example.project_oop_20242.ChooseNumberOfPlayersController">
   <children>
      <ImageView fitHeight="1024.0" fitWidth="1536.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@cards/MenuBackground.png"/>
         </image>
      </ImageView>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0">
         <children>
            <Button fx:id="_2PlayerButton" focusTraversable="false" mnemonicParsing="false"
                    onAction="#start2PlayerGame" onMouseEntered="#_2PlayersEnter" onMouseExited="#_2PlayersExit"
                    prefHeight="50.0" prefWidth="199.0" style="-fx-background-radius: 8;" styleClass="Button"
                    stylesheets="@MenuStyle.css" text="2 Players">
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <font>
                  <Font name="Times New Roman Bold" size="20.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
            <Button fx:id="_3PlayerButton" focusTraversable="false" mnemonicParsing="false"
                    onAction="#start3PlayerGame" onMouseEntered="#_3PlayersEnter" onMouseExited="#_3PlayersExit"
                    prefHeight="50.0" prefWidth="200.0" style="-fx-background-radius: 8;" styleClass="Button"
                    stylesheets="@MenuStyle.css" text="3 Players">
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <font>
                  <Font name="Times New Roman Bold" size="20.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
            <Button fx:id="_4PlayerButton" focusTraversable="false" mnemonicParsing="false"
                    onAction="#start4PlayerGame" onMouseEntered="#_4PlayersEnter" onMouseExited="#_4PlayersExit"
                    prefHeight="50.0" prefWidth="199.0" style="-fx-background-radius: 8;" styleClass="Button"
                    stylesheets="@MenuStyle.css" text="4 Players">
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <font>
                  <Font name="Times New Roman Bold" size="20.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
            <Button fx:id="backToChooseGameplayButton" focusTraversable="false" mnemonicParsing="false"
                    onAction="#backToChooseGameplay" onMouseEntered="#backToChooseGameplayEnter"
                    onMouseExited="#backToChooseGameplayExit" prefHeight="50.0" prefWidth="200.0"
                    style="-fx-background-radius: 8;" styleClass="Button" stylesheets="@MenuStyle.css" text="Back">
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <font>
                  <Font name="Times New Roman Bold" size="20.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
